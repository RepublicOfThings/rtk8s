apiVersion: "v1"
kind: "Service"
metadata:
  name: "smeiling-{{ service.name }}-app"
  labels:
    app: "smeiling-{{ service.name }}"
    tier: "application"
spec:
  type: "LoadBalancer"
  selector:
    app: "smeiling-{{ service.name }}"
    tier: "application"
  ports:
  - port: 80
    targetPort: "nginx-http"
    name: "http"
  - port: 443
    targetPort: "nginx-https"
    name: https
