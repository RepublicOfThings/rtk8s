apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: {{ app.name }}-app
  labels:
    name: {{ app.name }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: {{ app.name }}-app
    spec:
      containers:
      - name: {{ app.name }}-app
        image: {{ app.deployment.repo }}/{{ app.name }}-app
        ports:
          - containerPort: 5000
        env:
          - name: SUBPATH
            value: /{{ app.name }}-app

        imagePullPolicy: Always

        readinessProbe:
          httpGet:
            path: /{{ app.name }}-app/ping
            port: 5000
          initialDelaySeconds: 5
          periodSeconds: 15

        livenessProbe:
          httpGet:
            path: /{{ app.name }}-app/ping
            port: 5000
          initialDelaySeconds: 5
          periodSeconds: 15
